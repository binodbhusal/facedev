<div class="container mt-5">
  <h1 class="text-4xl font-bold mb-4">Welcome to FaceDev</h1>

  <div class="bg-white shadow-md rounded-lg p-4 mb-3">
    <h4 class="text-2xl  mb-1 text-center">Find developers across the world</h4>
    <%= search_form_for @q, url: root_path do |form| %>
      <div class="input-group mb-3">
        <%= form.search_field :city_or_country_cont, class: "form-control", placeholder: "Search developer by country or city", area: { label: "Search developer by country or city", describedby: "button-addon-2" } %>
        <button type="submit" class="btn btn-primary" id="button-addon-2">Search</button>
      </div>
    <% end %>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 gap-4 mt-5">
    <% @users.each do |user| %>
      <div class="col mb-3">
        <div class="card">
          <div class="card-body">
            <%= image_tag "dummyuser.png", style: "width:100px; border:2px solid #2CBCE9; border-radius:50%"; %>
            <div class="user-info mt-4 text-center">
              <h5 class="text-xl font-semibold"><%= user.name %></h5>
              <p class="text-gray-600"><%= user.profile_title %></p>
              <small class="text-gray-500"><%= user.country %> </small>
              <div class="d-grid mt-4">
                <%= link_to "View Profile", member_path(user), class: "btn btn-danger text-white rounded-md text-center" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
