<%= form_with model: current_user, url: update_user_description_path, method: :patch do |form| %>
  <div class="modal-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= form.label :description, class: 'mb-3' %>
          <%= form.text_area :bio, value: current_user.bio, class: 'form-control', rows: 15 %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit 'Save Changes', data: { action: 'click->bs-modal#submitEnd' } %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>